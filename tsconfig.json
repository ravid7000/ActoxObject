{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "strictNullChecks": false,
        "baseUrl": "./src",
        "rootDirs": [
            "src"
        ],
        "outDir": "./dist",
        "esModuleInterop": true,
        "declaration": true,
        "target": "esnext"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}